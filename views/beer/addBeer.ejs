<h2>Create a new beer for other Taco Tavern users to check out!</h2>

<div class="row">
    <form method="POST" action="/beer" class="col s12">
        <div class="row">
            <div class="row">
                <div class="input-field col s4">
                    <input id="name" type="text" class="validate" name="name" required>
                    <label for="name">Beer Name</label>
                </div>
                <div class="input-field col s8">
                    <input id="tagline" type="text" class="validate" name="tagline">
                    <label for="tagline">Type/Tagline</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4">
                    <input id="abv" type="number" class="validate" name="abv">
                    <label for="abv">ABV %</label>
                </div>
            
            
                <div class="input-field col s8">
                    <input id="hops" type="text" class="validate" name="hops">
                    <label for="hops">Hops</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="description" type="text" class="validate" name="description">
                    <label for="description">Beer Description</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="foodPairing" type="text" class="validate" name="foodPairing">
                    <label for="foodPairing">Food Pairing (if any)</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="imgUrl" type="url" class="validate" name="imgUrl">
                    <label for="imgUrl">Image URL (if any)</label>
                </div>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Add this beer to the list!
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>

